/// USER AUTHENTICATION
model User {
  id            String        @id @default(uuid())
  email         String        @unique
  passwordHash  String
  name          String
  role          USER_ROLE     @default(CUSTOMER)
  sessions      Session[]
  orders        Order[]
  cartItems     CartItem[]
  abandonedCarts AbandonedCart[]
  auditLogs     AuditLog[]
  reviews       Review[]
  wishlistItems Wishlist[]
  addresses     Address[]
  notifications Notification[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}
